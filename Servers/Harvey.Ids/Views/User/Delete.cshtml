@model Harvey.Ids.ViewModels.UserViewModel;
<div>
    <hr />
    <div class="modal-body">
        <h4>Do you want to delete this user? </h4>
    </div>
    <hr />
    <div class="modal-footer">
        <form asp-controller="User" asp-action="Delete" method="post">
            <input asp-for="Id" hidden>
            @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
            <button class="btn btn-primary waves-effect" type="submit">Delete</button>
            <a id="user-delete-cancel" class="btn btn-danger waves-effect">Cancel</a>
        </form>
    </div>
</div>